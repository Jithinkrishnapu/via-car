{
  "expo": {
    "name": "ViaCar",
    "slug": "viacar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.viacar",
      "googleServicesFile": "./ios/ViaCar/GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "AIzaSyCWa-8hKZdGiYnIg-JS8vkkzD5lmhn5yP4"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "ViaCar needs location access to show your position on the map and provide navigation services.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "ViaCar needs location access to provide continuous navigation and location-based services.",
        "NSCameraUsageDescription": "ViaCar needs camera access to take photos of your documents.",
        "NSPhotoLibraryUsageDescription": "ViaCar needs photo library access to upload your documents.",
        "NSPhotoLibraryAddUsageDescription": "ViaCar needs permission to save photos to your library."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#FF4848"
      },
      "package": "com.viacar",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCWa-8hKZdGiYnIg-JS8vkkzD5lmhn5yP4"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "googleServicesFile": "./android/app/google-services.json"
    },
    "androidStatusBar": {
      "backgroundColor": "#FF4848",
      "barStyle": "light-content",
      "translucent": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF4848"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/images/icon.png",
          "color": "#FF4848",
          "sounds": []
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Cairo/Cairo-VariableFont_slnt,wght.ttf",
            "./src/assets/fonts/Inter/Inter-VariableFont_opsz,wght.ttf",
            "./src/assets/fonts/Roboto/Roboto-VariableFont_wdth,wght.ttf",
            "./src/assets/fonts/Kanit/Kanit-Thin.ttf",
            "./src/assets/fonts/Kanit/Kanit-ExtraLight.ttf",
            "./src/assets/fonts/Kanit/Kanit-Light.ttf",
            "./src/assets/fonts/Kanit/Kanit-Regular.ttf",
            "./src/assets/fonts/Kanit/Kanit-Medium.ttf",
            "./src/assets/fonts/Kanit/Kanit-SemiBold.ttf",
            "./src/assets/fonts/Kanit/Kanit-Bold.ttf",
            "./src/assets/fonts/Kanit/Kanit-ExtraBold.ttf",
            "./src/assets/fonts/Kanit/Kanit-Black.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "ViaCar needs location access to show your position on the map and provide navigation services.",
          "locationWhenInUsePermission": "ViaCar needs location access to show your position on the map and provide navigation services."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "ViaCar needs photo library access to upload your documents.",
          "cameraPermission": "ViaCar needs camera access to take photos of your documents."
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "488c807c-45cf-4cec-b448-218738c213d5"
      }
    }
  }
}
